{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "win64: g++ Build",
            "type": "shell",
            "command": "C:/Users/Public/tools/w64devkit/bin/g++.exe'",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": { "cwd": "${fileDirname}" },
            "problemMatcher": ["$gcc"],
            "group": { "kind": "build" }
        }
    ]
}