{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++-14 Build",
            "command": "/usr/bin/g++-14",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": { "cwd": "${fileDirname}" },
            "problemMatcher": ["$gcc"],
            "group": { "kind": "build" }
        }
    ]
}