{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "mimi: g++ Build",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {"cwd": "${fileDirname}"},
            "problemMatcher": ["$gcc"],
            "group": { "kind": "build" }
        }
    ]
}